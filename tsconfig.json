{
    "compilerOptions": {
        "noEmit": true,
        "outDir": "./dist/lib",
        "target": "es5",
        "module": "commonjs",
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "removeComments": true,
        "stripInternal": true,
        "declaration": true,
        "importsNotUsedAsValues": "error",
        "importHelpers": true
    },
    "include": [
        "./example",
        "./src",
        "./test",
        "./scripts"
    ]
}
