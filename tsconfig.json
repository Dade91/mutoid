{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "removeComments": true,
        "outDir": "lib",
        "declaration": true
    },
    "include": ["src"]
}
